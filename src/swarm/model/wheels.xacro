<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:macro name="wheel_link" params="name mesh scale mass ixx iyy izz">
    <link name="${name}">
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="${mass}"/>
        <inertia
          ixx="${ixx}"
          ixy="0"
          ixz="0"
          iyy="${iyy}"
          iyz="0"
          izz="${izz}"/>
      </inertial>

      <visual>
        <geometry>
          <mesh filename="package://swarm/meshes/${mesh}" scale="${scale}"/>
        </geometry>
        <material name="black">
          <color rgba="0.1 0.1 0.1 1"/>
        </material>
      </visual>

      <collision>
        <geometry>
          <mesh filename="package://swarm/meshes/${mesh}" scale="${scale}"/>
        </geometry>
      </collision>
    </link>
  </xacro:macro>

  <xacro:macro name="wheels" params="suffix">

    <xacro:wheel_link name="${suffix}front_left_wheel"  mesh="wheel.stl" scale="1 1 1"
                      mass="2.637" ixx="0.0246" iyy="0.04411" izz="0.0246"/>

    <xacro:wheel_link name="${suffix}front_right_wheel" mesh="wheel.stl" scale="1 1 1"
                      mass="2.637" ixx="0.0246" iyy="0.04411" izz="0.0246"/>

    <xacro:wheel_link name="${suffix}rear_left_wheel"   mesh="wheel.stl" scale="1 1 1"
                      mass="2.637" ixx="0.0246" iyy="0.04411" izz="0.0246"/>

    <xacro:wheel_link name="${suffix}rear_right_wheel"  mesh="wheel.stl" scale="1 1 1"
                      mass="2.637" ixx="0.0246" iyy="0.04411" izz="0.0246"/>

    <joint name="${suffix}front_left_wheel_joint" type="revolute">
      <parent link="${suffix}base_link"/>  <child link="${suffix}front_left_wheel"/>
      <origin xyz="0.256 0.2854 0.03282" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
      <limit lower="-1e16" upper="1e16" effort="20" velocity="50"/>
    </joint>

    <joint name="${suffix}front_right_wheel_joint" type="revolute">
      <parent link="${suffix}base_link"/>
      <child link="${suffix}front_right_wheel"/>
      <origin xyz="0.256 -0.2854 0.03282" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
      <limit lower="-1e16" upper="1e16" effort="20" velocity="50"/>
    </joint>

    <joint name="${suffix}rear_left_wheel_joint" type="revolute">
      <parent link="${suffix}base_link"/>
      <child link="${suffix}rear_left_wheel"/>
      <origin xyz="-0.256 0.2854 0.03282" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
      <limit lower="-1e16" upper="1e16" effort="20" velocity="50"/>
    </joint>

    <joint name="${suffix}rear_right_wheel_joint" type="revolute">
      <parent link="${suffix}base_link"/>
      <child link="${suffix}rear_right_wheel"/>
      <origin xyz="-0.256 -0.2854 0.03282" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
      <limit lower="-1e16" upper="1e16" effort="20" velocity="50"/>
    </joint>

  </xacro:macro>

</robot>